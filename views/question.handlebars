<!-- Question Form -->

<div class="h-auto mx-auto mt-24 flex flex-col justify-center items-center">
  <div class="bg-gray-900 border border-gray-800 shadow p-2 rounded-lg w-2/5 px-16 py-16">
    <form id="question-form">
      <div class="flex font-bold justify-center" style="padding-bottom: 5%">
        <i class="fa fa-question fa-fw mr-3 text-pink-600" style="font-size: 50px;"></i>
      </div>
      <h2 class="text-3xl text-center text-gray-300 mb-4">Ask A Question</h2>
      <div class="input-div border-b-2 relative grid my-5 py-1 focus:outline-none"
        style="grid-template-columns: 7% 93%">
        <div class="i">
          <i class="fas text-gray-500"></i>

        </div>
        <div class="div">

          <input type="text"
            class=" form-input absolute w-full h-full py-3 px-3 inset-0 text-black-100 border-b-2 hover:border-pink-400"
            style="background: white " placeholder="Question Title" name="question-title" id="question-title" />
        </div>
      </div>
      <div class="input-div border-b-2 relative grid my-5 py-1 focus:outline-none"
        style="grid-template-columns: 7% 93%">
        <div class="i">
          <i class="fas fa-text text-gray-500"></i>

        </div>
        <div class="div">

          <textarea
            class=" form-input absolute w-full h-full py-3 px-2 inset-0 text-black-100 border-b-2 hover:border-pink-400"
            style="background: white; height: 7rem" id="content" name="content"
            placeholder="Type your question here..."></textarea>
        </div>

      </div>
      <button type="submit" id="createQuestion"
        class="w-full py-2 rounded-full bg-pink-600 text-gray-300 focus:outline-none hover:text-gray-100 mt-24 mb-8">
        Create New Question
      </button>
    </form>
  </div>
  {{#each question as |q|}}
  <div id="question"
    class="bg-gray-900 rounded mt-6 px-12 w-3/4 rounded overflow-hidden shadow-lg justify-between border-b-2 max-w-full md:flex-col">
    <div class="my-6">
      <p class="font-bold text-xl mb-2 text-gray-300 text-left">{{q.question_title}}</p>
      <p class="text-gray-500 text-base text-left">{{q.question_contents}}</p>
    </div>
    <div class="my-6 flex items-center">
      <a type="submit" href="/answer"
        class="bg-pink-600 hover:bg-gray-100 text-gray-100 py-2 px-4 rounded shadow hover:text-pink-600 hover:border-pink-400 mr-4">
        Add Answer
      </a>
      <button data-id={{q.id}}
        class="delete-btn bg-pink-600 hover:bg-gray-100 text-gray-100 py-2 px-4 rounded shadow hover:text-pink-600 hover:border-pink-400">
        Delete
      </button>
    </div>
  </div>
  {{/each}}
  <script src="./js/question.js"></script>